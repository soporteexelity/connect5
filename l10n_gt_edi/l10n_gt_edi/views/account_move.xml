<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_move_view_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.gt.sat.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="accreditation_date"/>
                <field name="fcam_invoice" invisible="1"/>
                <field name="subscription_number" attrs="{'invisible': [('fcam_invoice', '=', False)]}"/>
                <field name="payment_amount" attrs="{'invisible': [('fcam_invoice', '=', False)]}"/>
            </field>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='name']" position="after">
                <field name="modelo" invisible="1"/>
                <field name="monto_gravable" invisible="1"/>
                <field name="impuesto" invisible="1"/>
                
                
            </xpath>
            <group id="header_right_group" position="after">
                <field name="use_in_sat" invisible="1"/>
                <group string="FEEL" attrs="{'invisible': [('use_in_sat', '=', False)]}">
                    <field name="allowed_type_ids" invisible="1"/>
                    <field name="dte_type_id" domain="[('id', 'in', allowed_type_ids)]" attrs="{'required': [('use_in_sat', '=', True)]}"/>
                    
                    <field name="emision_datetime"/>
                    <field name="origin_date" attrs="{'invisible': [('move_type', 'not in', ('in_refund', 'out_refund'))]}"/>
                    <field name="origin_uuid" attrs="{'invisible': [('move_type', 'not in', ('in_refund', 'out_refund'))]}"/>
                    <field name="posted_before" invisible="1"/>
                    <field name="annulment_reason" string="Raz贸n de anulaci贸n" class="oe_edit_only" states="draft" attrs="{'invisible': [('posted_before', '=', False)]}"/>
                    <field name="annulment_reason" string="Raz贸n de anulaci贸n" class="oe_read_only" attrs="{'invisible': [('annulment_reason', 'in', (False, ''))]}"/>
                </group>
            </group>
            <button name="button_draft" position="attributes">
                <attribute name="attrs">{'invisible': [('posted_before', '=', True)]}</attribute>
            </button>
            <button name="button_cancel" position="attributes">
                <attribute name="attrs">{'invisible': [('posted_before', '!=', True)]}</attribute>
                <attribute name="states">posted</attribute>
            </button>
        </field>
    </record>

    <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
        <field name="context" eval="{'default_move_type': 'out_invoice', 'default_dte_type_id': ref('l10n_gt_edi.gt_dte_type_fact')}"/>
    </record>
</odoo>
