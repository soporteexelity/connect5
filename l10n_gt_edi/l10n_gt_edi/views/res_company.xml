<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_company_view_form" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.gt.sat.fields</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page id="fiscal_information" string="Fiscal Information">
                    <group>
                        <field name="iva_affiliation_id"/>
                        <field name="codigo_establecimiento"/>
                        <field name="default_dte_type_id"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
