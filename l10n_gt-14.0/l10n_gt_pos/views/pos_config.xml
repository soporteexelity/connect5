<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_inherit_dte" model="ir.ui.view">
        <field name="name">view.pos.config.inherit.dte</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_invoicing']" position="inside">
                <div class="o_setting_right_pane">
                    <div class="content-group mt16">
                        <div class="row mt16">
                            <label string="DTE type" for="dte_type_id" class="col-lg-3 o_light_label"/>
                            <field name="dte_type_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
